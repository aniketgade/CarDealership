        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(m => m.saleLogViewModel.ZipCode, new { @class = "control-label" })

                @Html.TextBoxFor(m => m.saleLogViewModel.ZipCode, new { @class = "form-control", id = "ZipTextBox" })

            </div>
