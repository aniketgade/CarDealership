@model CarDealership.Models.ViewModels.PurchaseViewModel
@{
    ViewBag.Title = "Purchase Vehicle";
}

<h2>@ViewBag.Title</h2>

<div class="GridBoxSearch row">
    <div class="row">
        <h4>@Model.vehicle.Year @Model.vehicle.Make @Model.vehicle.Model</h4>
        <div class="col-md-3">
            <img src="@Url.Content("~/Images/Vehicles/" + Model.vehicle.ImageFileName)">
        </div>
        <div class="col-md-3">
            <div class="row">
                <label>Body Style:</label>
                @Model.vehicle.BodyStyle
            </div>
            <div class="row">
                <label>Trans:</label>
                @Model.vehicle.Transmission
            </div>
            <div class="row">
                <label>Color:</label>
                @Model.vehicle.Color
            </div>
        </div>
        <div class="col-md-3">
            <div class="row">
                <label>Interior:</label>
                @Model.vehicle.Interior
            </div>
            <div class="row">
                <label>Mileage:</label>
                @Model.vehicle.Mileage
            </div>
            <div class="row">
                <label>VIN:</label>
                @Model.vehicle.VIN
            </div>
        </div>
        <div class="col-md-3">
            <div class="row">
                <label>Sale Price:</label>
                <span>@String.Format("{0:C}", @Model.vehicle.SalePrice)</span>
            </div>
            <div class="row">
                <label>MSRP:</label>
                <span>@String.Format("{0:C}", @Model.vehicle.MSRP)</span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-offset-3">
            <label>Description:</label>
            @Model.vehicle.Description
        </div>
    </div>
</div>

<h2>Sales Information</h2>

@using (Html.BeginForm("Purchase", "Sales", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <br />

    @Html.ValidationSummary("", new { @class = "text-danger", id = "errorMessages" })

    @Html.HiddenFor(m => m.saleLogViewModel.VehicleId, new { Value = @Model.vehicle.VehicleId })
    @Html.HiddenFor(m => m.saleLogViewModel.SalePrice, new { Value = @Model.vehicle.SalePrice })
    @Html.HiddenFor(m => m.saleLogViewModel.MSRP, new { Value = @Model.vehicle.MSRP })

    <div class="row">

        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(m => m.saleLogViewModel.BuyerName, new { @class = "control-label" })

                @Html.TextBoxFor(m => m.saleLogViewModel.BuyerName, new { @class = "form-control", id = "NameTextBox" })

            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(m => m.saleLogViewModel.Phone, new { @class = "control-label" })

                @Html.TextBoxFor(m => m.saleLogViewModel.Phone, new { @class = "form-control", id = "PhoneTextBox" })

            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(m => m.saleLogViewModel.Email, new { @class = "control-label" })

                @Html.TextBoxFor(m => m.saleLogViewModel.Email, new { @class = "form-control", id = "EmailTextBox" })

            </div>
        </div>
    </div>

    <div class="row">

