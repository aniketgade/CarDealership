        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(m => m.saleLogViewModel.PurchasePrice, new { @class = "control-label" })

                @Html.TextBoxFor(m => m.saleLogViewModel.PurchasePrice, new { @class = "form-control", id = "PurchaseTextBox", Value = "" })

