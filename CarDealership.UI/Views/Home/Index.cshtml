@model CarDealership.Models.Queries.HomeViewModel
@{
    ViewBag.Title = "Home Page";
}

    <div class="jumbotron carousel slide" id="myCarousel" data-ride="carousel">
        <a href="@Url.Action("Specials", "Home")">
            <div class="carousel-inner">
                @{bool active = true; }
                @foreach (var special in @Model.specialList)
                {
                    if (active)
                    {
                        <div class="item active">
                            <h1>@special.Title</h1>
                            <p>@special.Description</p>
                        </div>
                        active = false;
                        continue;
                    }

                    <div class="item">
                        <h1>@special.Title</h1>
                        <p>@special.Description</p>
                    </div>

                }

            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </a>
    </div>

        <h3>Featured Vehicles</h3>
        <br />
        <div class="GridContainerHome">
            @foreach (var vehicle in @Model.vehicleList)
            {

                <div class="GridBoxHome">
                    <p><img src="@Url.Content("~/Images/Vehicles/" + vehicle.ImageFileName)"></p>
                    <p>@vehicle.Year @vehicle.Make @vehicle.Model</p>
                    <p><span>@String.Format("{0:C}", @vehicle.SalePrice)</span></p>
                </div>

            }
        </div>
