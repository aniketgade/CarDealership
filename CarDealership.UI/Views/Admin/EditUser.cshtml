@model CarDealership.UI.Models.EditUserViewModel


<h2>Edit User</h2>

@using (Html.BeginForm("EditUser", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="row">

        @Html.HiddenFor(m => m.Id, @Model.Id)

        <div class="col-lg-6">

            <div class="form-group">

                @Html.LabelFor(m => m.FirstName, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @Value = @Model.FirstName })

            </div>

            <div class="form-group">
                
                @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @Value = @Model.Email })

            </div>

            <div class="form-group">

                @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })

            </div>

        </div>

        <div class="col-lg-6">

            <div class="form-group">

                @Html.LabelFor(m => m.LastName, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @Value = @Model.LastName })

            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Role)
                @Html.DropDownListFor(m => m.Role,
                       new List<SelectListItem>
                       {
                            new SelectListItem { Text="Admin", Value="Admin" },
                            new SelectListItem { Text="Sales", Value="Sales" },
                            new SelectListItem { Text="Disabled", Value="Disabled" },
                       },
                       "- Select Role -",
                       new { @class = "form-control", @Value = @Model.Role })
            </div>

            <div class="form-group">

                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })

            </div>
        </div>

    </div>
    <div class="form-group row">
            <input type="submit" class="btn btn-default" value="Save" />
     </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
